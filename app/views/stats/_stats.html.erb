<% if stats.default.present? %>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/pv.png', title: 'Pontos de Vida' %><span>Pontos de Vida:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.health %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:health) %> </strong>
    </div>
  </div>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/atk_fis.png', title: 'Ataque Físico' %><span>Ataque Físico:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.patk %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:patk) %> </strong>
    </div>
  </div>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/def_fis.png', title: 'Defesa Física' %><span>Defesa Física:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.pdef %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:pdef) %> </strong>
    </div>
  </div>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/speed.png', title: 'Velocidade' %><span>Velocidade:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.speed %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:speed) %> </strong>
    </div>
  </div>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/atk_cos.png', title: 'Ataque Cósmico' %><span>Ataque Cósmico:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.matk %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:matk) %> </strong>
    </div>
  </div>
  <div class="tr col-4"> 
    <div class="td"><%= image_tag 'characters/def_cos.png', title: 'Defesa Cósmica' %><span>Defesa Cósmica:</span></div>
    <div class="td">
      <strong class="stat-default"> <%= stats.default.first.mdef %> </strong>
      <strong class="stat-cloth"> <%= stats.sum(&:mdef) %> </strong>
    </div>
  </div>
<% end %>

<div class="">
  <%= link_to('Cadastrar Status', new_character_stat_path(@character), class: 'admin') %>
</div>

<% if stats.default.present? %>
<div class="">
  <%= link_to('Editar Status Padrão', edit_character_stat_path(@character, stats.default.first), class: 'admin') %>
</div>
<div class="">
  <%= link_to 'Deletar Status Padrão', character_stat_path(@character, stats.default.first), method: :delete,
              data: {confirm: "Remover esses status?"}, class: 'text-danger admin' %>
</div>
<% end %>

<% if stats.cloth.present? %>
<div class="">
  <%= link_to('Editar Status Cloth', edit_character_stat_path(@character, stats.cloth.first), class: 'admin') %>
</div>
<div class="">
  <%= link_to 'Deletar Status Cloth', character_stat_path(@character, stats.cloth.first), method: :delete,
              data: {confirm: "Remover esses status?"}, class: 'text-danger admin' %>
</div>
<% end %>